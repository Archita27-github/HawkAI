    <script>
        const feedbackContainers = document.querySelectorAll(".feedback_emoji_con");
        const textarea = document.querySelector(".textarea--active");
        const btn = document.querySelector(".btn");

        feedbackContainers.forEach((container) => {
            const emoji = container.querySelector(".emoji");

            emoji.addEventListener("click", (e) => {
                if (e.target.className.includes("emoji")) return;

                const textarea = container.querySelector(".textarea");
                const btn = container.querySelector(".btn");

                textarea.classList.add("textarea--active");
                btn.classList.add("btn--active");
            });

            container.addEventListener("mouseleave", () => {
                const textarea = container.querySelector(".textarea");
                const btn = container.querySelector(".btn");

                textarea.classList.remove("textarea--active");
                btn.classList.remove("btn--active");
            });
        });




    </script>


