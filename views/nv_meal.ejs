<%- include('partials/header.ejs') %>

    <div class="page special_page">
        <button class="cart_button special_button" onclick="window.location.href='/viewcart'">
            <div>
                <% if (locals.cart_length){ %>
                    <h6 class="cart_list_number">
                        <%= cart_length %>
                    </h6>
                    <% } else { %>
                        <h6 class="cart_list_number">0</h6>
                        <% } %>
            </div>

            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" fill="currentColor"
                class="bi bi-cart-fill cart_sym" viewBox="0 0 16 16">
                <path
                    d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            VIEW CART
        </button>
        <div class="meal_container">
            <div class="options">
                <img src="/images/Camera Image.jpg" alt="camera_image" class="cam_img meal_cam">
                <div class="inner_elements">
                    <div class="elements">
                        <img src="/images/nv_starters.72932330827064" alt="starters" class="meal_img">
                        <div class="button_row">
                            <button class="meal_button meal_pad starters_button exception_button" type="button"
                                onclick="window.location.href='/starter/nv'">STARTERS</button>
                        </div>
                    </div>
                    <div class="elements">
                        <img src="/images/maincourse.jpeg" alt="main course" class="meal_img">
                        <div class="button_row">
                            <button type="button" onclick="window.location.href='/maincourse/nv'"
                                class="meal_button meal_pad">MAIN
                                COURSE </button>
                        </div>

                    </div>
                </div>

            </div>

        </div>
        <button class="go_back" type="button" onclick="window.location.href='/previous'">Previous Page</button>
    </div>

    <%- include('partials/footer.ejs') %>